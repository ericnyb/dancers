<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.DetailActivity" >

     <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="@dimen/activity_venue_text_font"
        android:text="@string/Title" />

    <TextView
        android:id="@+id/textViewVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTitle"
        android:layout_below="@+id/textViewTitle"
        android:textColor="@color/blue"
        android:textSize="@dimen/activity_venue_text_font"
        android:text="@string/Venue" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewVenue"
        android:layout_below="@+id/textViewVenue"
        android:textColor="@color/blue"
        android:textSize="@dimen/activity_venue_text_font"
        android:text="@string/Date" />

    <TextView
        android:id="@+id/textViewChoreos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewDate"
        android:layout_below="@+id/textViewDate"
        android:textSize="@dimen/activity_venue_text_font"
        android:textColor="@color/blue"/>

    <ListView
        android:id="@+id/listViewDancer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewChoreos" >

    </ListView>

</RelativeLayout>
